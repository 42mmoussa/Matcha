<% include templates/header.ejs %>
<link rel="stylesheet" href="/css/tag.css">


<section class="container">
  <h3>Create your profile</h3>
  <% if (locals.warning) { %>
	<div class="alert alert-warning" role="alert">
	  <%= warning %>
	</div>
  <% } %>
  <% if (locals.success) { %>
	<div class="alert alert-success" role="alert">
	  <%= success %>
	</div>
  <% } %>
  <% if (locals.error) { %>
	<div class="alert alert-danger" role="alert">
	  <%= error %>
	</div>
  <% } %>
  <form action="/profile/submit-create" method="post">
	<fieldset class="form-group">
	<div class="form-group row">
		<label for="staticName" class="col-sm-2 col-form-label"><b>Name</b></label>
		<div class="col-sm-10">
		  <input type="text" readonly class="form-control-plaintext" id="staticName" name="staticName" value="<%= locals.session.user.lastname %> <%= locals.session.user.firstname %>">
		</div>
	  </div>
	  <div class="form-group row">
		  <label for="staticUsername" class="col-sm-2 col-form-label"><b>Username</b></label>
		  <div class="col-sm-10">
			<input type="text" readonly class="form-control-plaintext" id="staticUsername" name="staticUsername" value="<%= locals.session.user.username %>">
		  </div>
		</div>
	  <div class="form-group row">
		  <label for="staticAge" class="col-sm-2 col-form-label"><b>Age</b></label>
		  <div class="col-sm-10">
			<input type="text" readonly class="form-control-plaintext" name="staticAge" id="staticAge" value="<%= locals.age %>">
		  </div>
		</div>
		</fieldset>
		  <fieldset class="form-group">
		<div class="form-row">
			  <label class="col-sm-2 col-form-label" for="gender"><b>Gender</b></label>
			  <div class="col-sm-10">
				<select class="custom-select mr-sm-2" id="gender" name="gender">
				  <option value="" selected>Choose...</option>
				  <option value="man">Man</option>
				  <option value="woman">Woman</option>
				</select>
			</div>
		</div>
		</fieldset>
		<fieldset class="form-group">
		<div class="form-group row">
		  <div class="col-sm-2"><b>Sexual Orientation</b></div>
			<div class="col-sm-10">
				<div class="form-check">
				<input class="form-check-input" type="checkbox" id="heterosexual" name="heterosexual">
				<label class="form-check-label" for="heterosexual">
					Heterosexual
				</label>
				</div>
				<div class="form-check">
				<input class="form-check-input" type="checkbox" id="homosexual" name="homosexual">
				<label class="form-check-label" for="homosexual">
					Homosexual
				</label>
				</div>
				<div class="form-check">
				<input class="form-check-input" type="checkbox" id="bisexual" name="bisexual">
				<label class="form-check-label" for="bisexual">
					Bisexual
				</label>
				</div>
		</div>
	  </div>
	  </fieldset>
	  <fieldset class="form-group">
	  <div class="form-group row">
		<label for="bio" class="col-sm-2 col-form-label"><b>Bio</b></label>
		<div class="col-sm-10">
		  <textarea class="form-control" id="bio" name="bio" rows="3" maxlength="500"></textarea>
		</div>
	  </div>
	  </fieldset>
	  <fieldset class="form-group">
	  <div class="form-group row">
			<label for="tags" class="col-sm-2 col-form-label"><b>Tags</b></label>
			<div class="col-sm-10">
				<div class="tags-input" data-name="tags" id="tags">
				</div>
			</div>
	  </div>
  </fieldset>
	<div class="form-group row">
	  <div class="col-sm-10">
		<button type="submit" class="btn btn-primary">Confirm</button>
	  </div>
	</div>
  </form>
  <script src="/js/tag.js"></script>
</section>

<% include templates/footer.ejs %>
