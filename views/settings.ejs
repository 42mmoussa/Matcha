<% include templates/header.ejs %>

<link rel="stylesheet" href="/css/profile.css">
<link rel="stylesheet" href="/css/tag.css">

<section class="container">
	<h3>Settings</h3>
	<% if (locals.warning) { %>
		<div class="alert alert-warning" role="alert">
			<%= warning %>
		</div>
	<% } %>
	<% if (locals.success) { %>
		<div class="alert alert-success" role="alert">
			<%= success %>
		</div>
	<% } %>
	<% if (locals.error) { %>
		<div class="alert alert-danger" role="alert">
			<%= error %>
		</div>
	<% } %>
	<fieldset class="form-group">
		<div class="row">
			<label for="staticName" class="col-sm-3 col-form-label"><b>Delete</b></label>
			<div class="col-sm-10">
				<a role="button" id="delete" name="delete" href="/settings/confirm-password" class="btn btn-outline-danger">Delete your Account</a>
			</div>
		</div>
	</fieldset>
</section>

<% include templates/footer.ejs %>
