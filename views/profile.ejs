<% include templates/header.ejs %>
<link rel="stylesheet" href="/css/profile.css">

<section class="container">
  <h3>Your Profile</h3>
  <% if (locals.warning) { %>
    <div class="alert alert-warning" role="alert">
      <%= warning %>
    </div>
  <% } %>
  <% if (locals.success) { %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
  <% } %>
  <% if (locals.error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  <div class="info">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/img/flower.jpeg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/img/photo.jpeg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/img/water.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="user-profile">
    <fieldset class="form-group">
      <div class="form-group row">
        <label for="staticName" class="col-sm-3 col-form-label"><b>Name</b></label>
        <div class="col-sm-10">
          <p class="text-left" id=staticName"><%= locals.session.user.lastname %> <%= locals.session.user.firstname %></p>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticUsername" class="col-sm-4 col-form-label"><b>Username</b></label>
        <div class="col-sm-10">
          <p class="text-left" id="staticUsername"><%= locals.session.user.username %></p>
        </div>
      </div>
      <div class="form-group row">
        <label for="staticAge" class="col-sm-4 col-form-label"><b>Age</b></label>
        <div class="col-sm-10">
          <p class="text-left" id="staticAge"><%= locals.session.user.age %></p>
        </div>
      </div>
      <div class="form-group row">
        <label for="gender" class="col-sm-4 col-form-label"><b>Gender</b></label>
        <div class="col-sm-10">
          <p class="text-left" id="gender"><%= locals.gender %></p>
        </div>
      </div>
      <div class="form-group row">
        <label for="orientation" class="col-sm-3 col-form-label"><b>Orientation</b></label>
        <div class="col-sm-12">
          <p class="text-left" id="orientation"><%= locals.orientation %></p>
        </div>
      </div>
      <div class="form-group row">
        <label for="bio" class="col-sm-3 col-form-label"><b>Biography</b></label>
        <div class="col-sm-12">
          <p class="text-left" id="bio"><%= locals.bio %></p>
        </div>
      </div>
      </fieldset>

  </div>
  </div>
</section>

<% include templates/footer.ejs %>
